<div class="container h-20 min-w-[100%] mx-auto flex justify-between items-center  rounded-md flex-row shadow-sm"
    id="navbar">

    <div id="logo">
        <a href="/admin">
            <img src="/images/logo.png" alt="" class="w-20 h-16 ml-10 inline-block">
            <li class="list-none inline-block py-5">StudQuery</li>
        </a>
    </div>


    <div class="w-12 h-12 bg-violet-400 mr-32 rounded-full relative profile-container">
        <div id="hover-options" class="hidden text-center min-h-full w-32 absolute top-12 -right-12 bg-white rounded-xl">
            <ul class="list-none flex space-y-1 flex-col py-3">
            
                <% if (!userSession.isLoggedIn) { %>
                    <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer p-2"><a href="/login">Login</a></li>
                    <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer p-2"><a href="/signup">Signup</a></li>
                <% } %>

                <% if (userSession.isLoggedIn) { %>
                    
                    <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer"><a href="/adminLogout">Logout</a></li>
                <% } %>
                
            </ul>
        </div>
    </div>
    

</div>

<div class="container w-[8%] min-h-max mt-10 z-20 inline-block">
    <div class="flex flex-col min-h-screen items-baseline ml-8 space-y-2">
        <form action="/admin/users" method="get">
            <button class="p-3  w-full group  hover:border-[#40916c] hover:text-white hover:bg-[#52b788]  border-l-8 rounded-r-md rounded-l-lg ">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                <span class="group-hover:inline-block hidden pt-1">Manage Users</span>
                
            </button>
        </form>

        <form action="/admin/questions" method="get">
            <button class="p-3 w-full group   hover:border-[#40916c] hover:text-white hover:bg-[#52b788]  border-l-8 rounded-r-md rounded-l-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                <span class="group-hover:inline-block hidden pt-1 ">Manage Questions</span>
                
            </button>
        </form>

        <form action="/admin/answers">
            <button class="p-3 w-full group hover:border-[#40916c] hover:text-white hover:bg-[#52b788]  border-l-8 rounded-r-md rounded-l-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
                  </svg>
                <span class="group-hover:inline-block hidden pt-1">Manage Answers</span>
                
            </button>
        </form>

        <form action="/report" method="get">
            <button class="p-3 w-full group  hover:border-[#40916c] hover:text-white hover:bg-[#52b788]  border-l-8 rounded-r-md rounded-l-lg ">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                  </svg>
                <span class="group-hover:inline-block hidden pt-1">Reported Questions</span>
            </button>
        </form>

        <form action="/report/answers" method="get">
            <button class="p-3 w-full group  hover:border-[#40916c] hover:text-white hover:bg-[#52b788]  border-l-8 rounded-r-md rounded-l-lg ">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="group-hover:inline-block hidden pt-1">Reported Answers</span>
            </button>
        </form>

        <form action="/admin/search" method="get">
            <button class="p-3 w-full group hover:border-[#40916c] hover:text-white hover:bg-[#52b788]  border-l-8 rounded-r-md rounded-l-lg ">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <span class="group-hover:inline-block hidden pt-1">Search</span>
                
            </button>
        </form>
    </div>
</div>

<script>
    	$(".profile-container").hover(function(e) {
            $("#hover-options").toggleClass("hidden");
        })
        $(".hover-options").hover(function() {
            $(this).toggleClass("hidden");
        })
</script>
