    <div class="w-12 h-12 bg-violet-400 mr-32 rounded-full relative profile-container">
        <div id="hover-options" class="hidden text-center min-h-full w-32 absolute top-12 -right-12 bg-[#F7F7F7] rounded-xl">
            <ul class="list-none flex space-y-1 flex-col py-3">
                <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer p-0.5"><a href="/">Home</a></li>
                <% if (!userSession.isLoggedIn) { %>
                    <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer p-0.5"><a href="/login">Login</a></li>
                    <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer p-0.5"><a href="/signup">Signup</a></li>
                <% } %>

                <% if (userSession.isLoggedIn) { %>
                    <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer p-0.5"><a href="<%= `/user/${userSession.userid}`%>">My Profile</a></li>
                    <li class="hover:bg-blue-500 hover:text-white rounded-md cursor-pointer p-0.5"><a href="/logout">Logout</a></li>
                <% } %>
                
               

            </ul>
        </div>
    </div>
    

