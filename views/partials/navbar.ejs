    <div id="search" class="h-10 w-[45%]">
        <form action="/question/search" method="get">
            <svg class="absolute my-2 ml-4" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24"
                width="24px" fill="#694E4E">
                <path d="M0 0h24v24H0V0z" fill="none" />
                <path
                    d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" />
            </svg>
            <input type="text" name="search" id="search" placeholder="Search Here"
                class="w-full pl-14 rounded-lg border-0 bg-gray-200 focus:border-0 focus:ring-2 focus:ring-blue-500">
        </form>
    </div>

