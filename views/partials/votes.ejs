<!-- Question Votes Section -->
<div id="arrows" class="w-[8%] pt-4 float-left">
    <form action="/question/<%=question._id%>/vote/inc?fullQuestion=true&&_method=PUT" method="post" class="upForm hover:scale-125 transition-all">
        <button type="submit" id="post-inc">
            <svg class="cursor-pointer" width="70" height="20" viewBox="0 0 90 108" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path class="post-inc-path" id="Arrow 1" d="M49.2426 2.57276C46.8995 0.229614 43.1005 0.229614 40.7574 2.57276L2.57359 40.7565C0.230446 43.0997 0.230446 46.8987 2.57359 49.2418C4.91674 51.585 8.71573 51.585 11.0589 49.2418L45 15.3007L78.9411 49.2418C81.2843 51.585 85.0833 51.585 87.4264 49.2418C89.7696 46.8987 89.7696 43.0997 87.4264 40.7565L49.2426 2.57276ZM51 107.094L51 6.8154H39L39 107.094H51Z" fill="#9643FF" />
            </svg>
        </button>

        <input type="hidden" name="questionId" value="<%=question._id %>" />
    </form>
    <span id="" class="votes text-xl mx-auto py-2 inline-block text-gray-500 w-full text-center"><%= question.votes %> </span>

    <form action="/question/<%=question._id%>/vote/dec?fullQuestion=true&&_method=PUT" method="post" class="downForm hover:scale-125 transition-all mt-1">
        <button type="submit" id="post-dec">
            <svg class="cursor-pointer " width="70" height="20" viewBox="0 0 90 107" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path id="Arrow 2" d="M40.7574 105.191C43.1005 107.534 46.8995 107.534 49.2426 105.191L87.4264 67.0071C89.7696 64.664 89.7696 60.865 87.4264 58.5219C85.0833 56.1787 81.2843 56.1787 78.9411 58.5219L45 92.463L11.0589 58.5219C8.71573 56.1787 4.91674 56.1787 2.57359 58.5219C0.230447 60.865 0.230447 64.664 2.57359 67.0071L40.7574 105.191ZM39 0.669922L39 100.948H51L51 0.669922L39 0.669922Z" fill="#E16A6A" />
            </svg>
        </button>
        <input type="hidden" name="questionId" value="<%=question._id%>" />
    </form>

    <div class="saveQuestion mx-auto w-full mt-5">

        <% if(userSession && userSession.userid) {  %>
        <form action="/user/<%= userSession.userid %>/question/<%= question._id %>/savedQuestions" method="post">
            <button type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" class=" hover:scale-150 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="70" height="25">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="0" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" fill="#23C197" />
                </svg>
            </button>
        </form>
        <% } %>

    </div>
</div>
<!-- Question Votes Section End -->