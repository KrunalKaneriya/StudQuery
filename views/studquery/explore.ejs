<% layout ("../layout/boilerplate") %>
<%- include("../partials/sidebar") %>
<%- include("../partials/flash") %>

            <div class="container w-[70%] ml-[18%] my-6">
                <div id="heading" class="font-sofia text-gray-500 pl-10 pt-5 text-2xl">
                    Explore Tags
                    <div id="separator" class="h-0.5 w-full rounded-xl bg-[#EEEDFF] my-3"></div>
                </div>

                <div class="tagsContainer flex flex-row flex-wrap">
                    <% for (let tag of uniqueTags) {  %>

                        <div class="hover:bg-indigo-400 bg-[#5c636ad7] hover:-translate-y-1 transition-all duration-150  ring-[#008A65] m-3  ml-10  rounded-lg drop-shadow-sm shadow-md">

                                <a class="font-sofia font-light text-base hover:text-white text-white p-3 inline-block " href="/explore/<%= tag%>"><%= tag%></a>
                                
                        </div>

                        

                        <% } %>

                </div>
            </div>