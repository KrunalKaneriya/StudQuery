<% layout("../layout/boilerplate") %> <!--*All The Contents Of this File Will be Passed To This Layout File-->
<%- include("../partials/sidebar") %>

<script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>


    <div class="container w-[55%] mx-auto my-6 min-h-max pl-10">
        <h1 class="text-3xl text-slate-700 font-cera font-semibold my-6">Add A New Question</h1>

        <div>
            <form action="/user/<%= user._id%>/question" method="post" autocomplete="off" id="questionForm">

                <span class="drop-shadow-lg rounded-3xl bg-violet-400 text-white p-3">Posting As <%= userSession.username %> </span>

                <br><br>
                <label for="questionTitle" class="text-slate-600">Question Title</label>
                <br>
                <input type="text" name="questionTitle" id="questionTitle" class=" mt-2 rounded-xl border border-slate-300 shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 w-full text-slate-600" required>

                <br><br>

                <label for="questionDescription" class="text-slate-600">Description</label>
                <br>

                <div id="editor">

                </div>

                <input type="hidden" name="questionDescription" id="questionInput">
               

                <!-- <textarea name="questionDescription" id="" cols="30" rows="5" class="rounded-2xl mt-3 border border-slate-300 focus:border-sky-500 focus:ring-1 focus:ring-sky-500 w-full text-slate-600"></textarea> -->

                <br><br>


                <label for="tags">Tags</label>
                <br>
                <input type="text" name="tags" id="tags" class=" mt-2 rounded-xl border border-slate-300 shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 w-full text-slate-600" placeholder="Enter Words Separated By Space" required>
                <br><br>
                <button type="submit" class="p-3 mr-5 ring-2 ring-green-500 hover:bg-green-400 hover:text-white bg-green-200 text-green-600 rounded-xl drop-shadow-lg">Submit Question</button>
                <button type="reset" class="p-3 ring-2 hover:bg-blue-400 hover:text-white ring-blue-500 text-blue-600 bg-blue-200 rounded-xl drop-shadow-lg">Reset</button>
                <button class="p-3 bg-violet-600 text-white ml-2 rounded-xl" id="showData">Show the Data..</button>
            </form>
        </div>


    </div>

    <script>

       
        const editor = new toastui.Editor({
            el: document.querySelector('#editor'),
            previewStyle: 'vertical',
            initialEditType:"wysiwyg",
            height: '500px',
        });

        const showData = document.querySelector("#showData");

        $('#questionForm').submit(function() {
            let data = editor.getHTML();
            $("#questionInput").val(data);
        })


    </script>