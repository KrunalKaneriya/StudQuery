<% layout ("../layout/boilerplate") %>
    <%- include("../partials/sidebar") %>
        <%- include("../partials/flash") %>

<script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>

            <div class="container w-[60%] mx-auto my-6">
                <div id="heading" class="font-cera text-3xl pl-10 pt-5">
                    My Saved Questions
                    <div id="separator" class="h-0.5 w-full rounded-xl bg-orange-200 my-3"></div>
                </div>

                <% for(let question of questions) { %>
                    <div id="post" class="mb-10 rounded-2xl p-2  overflow-hidden">
                        <div id="arrows" class="w-[10%] pt-4 pl-2 float-left">
                            <form action="/question/<%=question._id %>/vote/inc?_method=PUT&&isPersonalQuestion=true" class="upForm hover:scale-125 transition-all" method="post">
                                <button type="submit" id="post-inc">
                                    <svg class="cursor-pointer" width="70" height="20" viewBox="0 0 90 108" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path class="post-inc-path" id="Arrow 1"
                                            d="M49.2426 2.57276C46.8995 0.229614 43.1005 0.229614 40.7574 2.57276L2.57359 40.7565C0.230446 43.0997 0.230446 46.8987 2.57359 49.2418C4.91674 51.585 8.71573 51.585 11.0589 49.2418L45 15.3007L78.9411 49.2418C81.2843 51.585 85.0833 51.585 87.4264 49.2418C89.7696 46.8987 89.7696 43.0997 87.4264 40.7565L49.2426 2.57276ZM51 107.094L51 6.8154H39L39 107.094H51Z"
                                            fill="#9643FF" />
                                    </svg>
                                </button>

                                <input type="hidden" name="questionId" value="<%= question._id %>" />
                            </form>

                            <span class="votes text-xl mx-auto py-2 inline-block text-gray-500 w-full text-center">
                                <%= question.votes %>
                            </span>

                            <form action='/question/<%= question._id %>/vote/dec?_method=PUT&&isPersonalQuestion=true' method="post" class="downForm hover:scale-125 transition-all">
                                <button type="submit" id="post-dec">
                                    <svg class="cursor-pointer" width="70" height="20" viewBox="0 0 90 107" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path id="Arrow 2"
                                            d="M40.7574 105.191C43.1005 107.534 46.8995 107.534 49.2426 105.191L87.4264 67.0071C89.7696 64.664 89.7696 60.865 87.4264 58.5219C85.0833 56.1787 81.2843 56.1787 78.9411 58.5219L45 92.463L11.0589 58.5219C8.71573 56.1787 4.91674 56.1787 2.57359 58.5219C0.230447 60.865 0.230447 64.664 2.57359 67.0071L40.7574 105.191ZM39 0.669922L39 100.948H51L51 0.669922L39 0.669922Z"
                                            fill="#E16A6A" />
                                    </svg>
                                </button>

                                <input type="hidden" name="questionId" value="<%= question._id %>"/>
                            </form>
                        </div>

                        <div id="questionWrapper">
                            <div id="question" class="ml-20">
                                <div class="w-full relative">
                                    <a class="text-xl inline-block mt-2 text-gray-700 font-sans max-w-xl"
                                        href="/question/<%= question._id%>">
                                        <%= question.questionTitle %>
                                    </a>
                                </div>

                                <p class="font-normal font-inter leading-8 pt-4 pb-5 text-gray-600/90">
                                    <%= question.snippet %>
                                </p>

                            </div>
                        </div>

                            <div id="answer-options" class="flex ml-20  text-gray-400/95 gap-12">
                                <form action="/question/<%= question._id %>/edit" method="get">
                                    <div class="hover:text-amber-500">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 float-left mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        <button type="submit" class="hover:text-amber-500">Edit</button>
                                    </div>
                                </form>
                                <form action="/question/<%=question._id%>?_method=DELETE&&isPersonalQuestion=true" method="post">
                                    <div class="hover:text-red-500">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 float-left mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        <button type="submit">Delete</button>
                                    </div>
                                </form>
                                <form action="/report/question/<%= question._id %>" method="post">
                                <div class="hover:text-cyan-500">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 float-left mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                                    </svg>
                                    <button>Report</button>
                                </div>
                               </form>
                            </div>


                    </div>
                    <% } %>


            </div>