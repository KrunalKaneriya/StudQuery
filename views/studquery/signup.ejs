<% layout("../layout/authBoilerplate") %> <!--*All The Contents Of this File Will be Passed To This Layout File-->

  <div class="container flex flex-col mt-10 mb-10 w-[80%] mx-auto rounded-2xl bg-slate-100 justify-center items-start">

    <div class="container">

    <img src="/images/logo.png" alt="" class="w-24 h-20 mt-4 mx-auto" />
    <h1 class=" text-center font-medium text-3xl text-gray-700 mt-2 font-cera">
      Sign up to StudQuery
    </h1>
    <h3 class=" font-cera font-normal text-xl mb-10 text-center text-gray-500 mt-5 ">
      Already A Member?
      <a href="/login" class="text-rose-500 underline underline-offset-1 text-center">Login</a>
    </h3>
  </div>


    <form action="/signup" method="post" class="ml-4" autocomplete="off">
      <div class="container flex flex-wrap gap-x-40 pl-20 drop-shadow-sm">

        <div class="container w-1/3">
          <label for="username" class="text-justify text-gray-600 font-cera">Username</label>
          <br />
          <input type="text" name="username" id="username" class=" focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300 input-text " required/>

          <br />

          <label for="alias" class="text-justify text-gray-600 font-cera">Alias</label>
          <br />
          <input type="text" name="alias" id="alias" class="input-text  focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300"/>
          <br />

          <label for="email" class="text-gray-600 font-cera">Email</label>
          <br />
          <input type="email" name="email" id="email" class="input-text focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required/>
          <br />
        </div>




        <div class="container w-1/3">
          <label for="age" class=" text-gray-600 font-cera">Age</label>
          <br />
          <input type="number" name="age" id="age" class="input-text  focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required/>
          <br />

          <label for="password" class="text-gray-600">Password</label>
          <br />
          <input type="password" name="password" id="password" class="input-text focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required/>
          <br />

          <label for="std" class="text-gray-600 font-cera">Studying In</label>
          <br />
          <input type="text" name="studyingIn" id="std" class="input-text  focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required/>
          <br />

        </div>


        <div class="container w-full">
          <label for="city" class="text-gray-600 font-cera">City</label>
          <br />
          <input type="text" name="city" id="city" class="input-text  focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required/>

          <br />

          <label for="description" class="text-gray-600 font-cera">Description</label>
          <br />
          <textarea name="description" id="description" rows="7" cols="115" class="textarea focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300"></textarea>
          <br />
          <button class="button hover:shadow-rose-400 bg-rose-600 text-white hover:bg-rose-400 hover:text-slate-800  p-5 rounded-2xl mb-10 ml-80 font-cera">Create A New Account</button>
        </div>
      </div>
    </form>
