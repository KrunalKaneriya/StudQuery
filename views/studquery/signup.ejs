<% layout("../layout/authBoilerplate") %>
<!--*All The Contents Of this File Will be Passed To This Layout File-->

<div class="container flex flex-col  w-[80%] mx-auto rounded-2xl justify-center items-start">

  <div class="container">

    <img src="/images/logo.png" alt="" class="w-24 h-20 mt-4 mx-auto" />
    <h1 class=" text-center font-medium text-3xl text-gray-700 mt-2 font-sofia">
      Sign up to StudQuery
    </h1>
    <h3 class=" font-sofia font-normal text-xl mb-10 text-center text-gray-500 mt-5 ">
      Already A Member?
      <a href="/login" class="text-rose-500 underline underline-offset-1 text-center font-light">Login</a>
    </h3>
  </div>


  <form action="/signup" method="post" class="ml-4" autocomplete="off" enctype="multipart/form-data">
    <div class="container flex flex-wrap gap-x-40 pl-20 drop-shadow-sm">

      <div class="container w-1/3">
        <label for="username" class="text-justify text-gray-600 font-sofia font-light">Username</label>
        <br />
        <input type="text" name="username" id="username"
          class=" focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300 input-text " required />

        <br />

        <label for="alias" class="text-justify text-gray-600 font-sofia font-light">Alias</label>
        <br />
        <input type="text" name="alias" id="alias"
          class="input-text  focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" />
        <br />

        <label for="email" class="text-gray-600 font-sofia font-light">Email</label>
        <br />
        <input type="email" name="email" id="email"
          class="input-text focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required />
        <br />
      </div>




      <div class="container w-1/3">
        
        <label for="password" class="text-gray-600 font-light">Password</label>
        <br />
        <input type="password" name="password" id="password"
          class="input-text focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required />
        <br />
        <label for="country" class="text-gray-600 font-sofia font-light">Country</label>
        <br />
        <input type="text" name="country" id="country"
          class="input-text  focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300" required />

        <br>
        <label for="profile" class="font-sofia text-gray-600 font-light">Profile Picture</label>
        <br>
        <input type="file" class="mt-4 w-full text-sm text-slate-700
            file:mr-4 file:py-2 file:px-4
            file:rounded-full file:border-0
            file:text-base file:font-semibold
            file:bg-gradient-to-r file:from-blue-500 file:to-blue-600 file:text-white
            hover:file:bg-violet-100 file:cursor-pointer" name="image" id="image">
      </div>


      <div class="container w-full">

        <br>
        <label for="description" class="text-gray-600 font-sofia font-light">Description</label>
        <br />
        <textarea name="description" id="description" rows="7" cols="115"
          class="textarea focus:outline-none focus:border-rose-300 focus:ring-1 focus:ring-rose-300"></textarea>
        <br />
        <button
          class="button bg-[#008A65] hover:bg-[#EE5C67] text-white  p-5 rounded-2xl mb-10 ml-80 font-sofia">Create
          A New Account</button>
      </div>
    </div>
  </form>
</div>